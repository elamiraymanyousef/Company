@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee </h1>
<br />
<br />
<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input readonly asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input readonly asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input readonly asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-form-label"></label>
        <input readonly asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input readonly asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input readonly asp-for="IsActive" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="IsDeleted" class="col-form-label"></label>
        <input readonly asp-for="IsDeleted" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input readonly asp-for="CreateAt" class="form-control" />
    </div>
    <br />
    <div class="my-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>