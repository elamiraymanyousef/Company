@model DepartmentDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department </h1>


<div class="container">
	<form asp-action="Edit">
		@*This form will submit the data to the Edit action in the DepartmentController*@ 
        @* go to action name is '"Edit"' *@
        <div class="form-group">
            <label class="col-form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label class="col-form-label" asp-for="CreateAt"></label>
            <input asp-for="CreateAt" class="form-control" />
            <span asp-validation-for="CreateAt" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start gap-3">
            <input type="submit" value="save" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </div>
    </form>
</div>

